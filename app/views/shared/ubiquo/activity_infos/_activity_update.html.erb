<p><%= l(activity.updated_at) %></p>
<p>
  <%= t("ubiquo.activity_info.#{activity.status}_update_message",
        :user => activity.ubiquo_user.login,
        :object_name => t("ubiquo.book.book_entity"),
        :object_id => activity.related_object_id,
        :action => activity.action) %>
</p>
<% if activity.related_object %>
  <p>
    <%= link_to t("ubiquo.activity_info.show_it"),
          :action => 'show', :controller => activity.controller, :id => activity.related_object_id  %>
  </p>
<% end %>